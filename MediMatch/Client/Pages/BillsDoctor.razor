@page "/BillsDoctor"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@attribute [Authorize]
@layout DoctorLayout
@inject HttpClient Http 
@using System.Threading;

<h3>Upcoming Payments</h3>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Patient</th>
            <th scope="col">Amount</th>
            <th scope="col">Due Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in BillsUpcoming)
        {
            <tr>
                <td>@b.PatientName</td>
                <td>$@b.Amount</td>
                <td>@b.DueDate.ToString("MM/dd/yyyy")</td>
            </tr>
        }
    </tbody>
</table>




<h3>Past Payments</h3>


<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Patient</th>
            <th scope="col">Amount</th>
            <th scope="col">Received On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in BillsHist)
        {
            <tr>
                <td>@b.PatientName</td>
                <td>$@b.Amount</td>
                <td>@b.Date_received?.ToString("MM/dd/yyyy")</td>
            </tr>
        }
    </tbody>
</table>



