@page "/ViewUpcomingAppointments"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@attribute [Authorize]
@layout PatientLayout
@using System.Threading;

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<center><h3>Upcoming Appointments</h3></center>
<br />
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Appointment Date</th>
            <th scope="col">Doctor</th>
            <th scope="col">Appointment Time </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in UpcomingAppointments)
        {
            <tr>
                <td>@a.StartTime.Date.ToString("MM/dd/yyyy")</td>
                <td>@a.DoctorFirstName @a.DoctorLastName</td>
                <td>@a.StartTime.ToString("hh:mm tt")</td>
            </tr>
        }
    </tbody>
</table>
