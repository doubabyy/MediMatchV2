@page "/PatientPage"
@layout PatientLayout
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@attribute [Authorize]
@using System.Globalization
<head>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<h2>Welcome to Your Patient Dashboard</h2>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Appointments
                </div>
                <div class="card-body">
                    <p>Two Upcoming appointment</p>
                   
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Messages
                </div>
                <div class="card-body">
                    <p>You have 3 unread messages</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Billing
                </div>
                <div class="card-body">
                    <p>Upcoming balance: $200</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Calendar
                </div>
                <div class="card-body">
                    <p>Today's date: @DateTime.Now.ToString("D", CultureInfo.CurrentCulture)</p>
                </div>
            </div>
        </div>
    </div>
    <h4 class="mt-5">Mental Health Infographics</h4>
    <div class="row">
        <div class="col-md-6">
            <img src="css/images/info1.jfif" alt="Mental Health Infographic 1" class="img-fluid">
        </div>
        <div class="col-md-6">
            <img src="css/images/info2.jfif" alt="Mental Health Infographic 2" class="img-fluid">
        </div>
    </div>
</div>
