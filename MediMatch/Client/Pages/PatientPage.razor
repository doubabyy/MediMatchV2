@page "/PatientPage"
@layout PatientLayout
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@attribute [Authorize]
@using System.Globalization
<head>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<center><h2>Welcome to Your Patient Dashboard</h2></center>
<br />
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <center>Appointments</center>
                </div>
                <div class="card-body">
                    <p>Click <a href = "/ViewUpcomingAppointments"> here </a> to view your upcoming appointments.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <center>Messages</center>
                </div>
                <div class="card-body">
                    <p>Click <a href = "/MessagePagePatient"> here </a> to view your chats.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <center>Billing</center>
                </div>
                <div class="card-body">
                    <p>Click <a href = "/Bills"> here </a> to view your bills and outstanding balance.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Calendar
                </div>
                <div class="card-body">
                    <p>Today's date: @DateTime.Now.ToString("D", CultureInfo.CurrentCulture)</p>
                </div>
            </div>
        </div>
    </div>
    <h4 class="mt-5">Mental Health Infographics</h4>
    <div class="row">
        <div class="col-md-6">
            <img src="css/images/info1.jfif" alt="Mental Health Infographic 1" class="img-fluid">
        </div>
        <div class="col-md-6">
            <img src="css/images/info2.jfif" alt="Mental Health Infographic 2" class="img-fluid">
        </div>
    </div>
</div>
