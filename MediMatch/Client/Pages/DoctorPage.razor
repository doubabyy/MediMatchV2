@page "/DoctorPage"
@layout DoctorLayout

<h3>Welcome to Your Dashboard, Doctor</h3>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Appointments</h5>
                    <p class="card-text">View and manage your upcoming appointments with patients.</p>
                    <a href="Appointments" class="btn btn-primary">Go to Appointments</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Patients</h5>
                    <p class="card-text">View your patients' information and manage their treatment plans.</p>
                    <a href="Patients" class="btn btn-primary">Go to Patients</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Billing</h5>
                    <p class="card-text">Review and manage your billing and payment information.</p>
                    <a href="Billing" class="btn btn-primary">Go to Billing</a>
                </div>
            </div>
        </div>
    </div>
</div>