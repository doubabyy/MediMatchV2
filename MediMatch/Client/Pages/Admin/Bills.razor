@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@attribute [Authorize]
@layout AdminLayout
@inject HttpClient Http
@using System.Threading;
@page "/Admin/Bills"

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<h2>Manage Bills</h2>

<br />


<h4>Upcoming Bills</h4>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Patient</th>
            <th scope="col">Doctor</th>
            <th scope="col">Amount</th>
            <th scope="col">Due Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in BillsUpcoming)
        {
            <tr>
                <td>@b.Bill_Id</td>
                <td>@b.PatientName</td>
                <td>@b.DoctorName</td>
                <td>$@b.Amount</td>
                <td>@b.DueDate></td>
                <button class="btn btn-primary" @onclick="@(() => DeleteBill(b.Bill_Id))">Delete</button>
            </tr>
        }
    </tbody>
</table>

<br />

<h4>Completed Bills</h4>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Patient</th>
            <th scope="col">Doctor</th>
            <th scope="col">Amount</th>
            <th scope="col">Due Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in BillsHist)
        {
            <tr>
                <td>@b.Bill_Id</td>
                <td>@b.PatientName</td>
                <td>@b.DoctorName</td>
                <td>$@b.Amount</td>
                <td>@b.DueDate></td>
                <button class="btn btn-primary" @onclick="@(() => DeleteBill(b.Bill_Id))">Delete</button>
            </tr>
        }
    </tbody>
</table>