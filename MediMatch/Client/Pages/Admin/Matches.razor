@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@attribute [Authorize]
@layout AdminLayout
@inject HttpClient Http
@using System.Threading;
@page "/Admin/Matches"

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<h2>Manage Requests</h2>
<br />

<h4>Pending Requests</h4>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Patient</th>
            <th scope="col">Doctor</th>
            <th scope="col">Requested On</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in PendingRequests)
        {
            <tr>
                <td>@b.Id</td>
                <td>@b.PatientName</td>
                <td>@b.DoctorName</td>
                <td>@b.RequestedAt</td>
                <button class="btn btn-primary" @onclick="@(() => DeleteMatch(b.Id))">Delete</button>
            </tr>
        }
    </tbody>
</table>

<br />

<h4>Matches</h4>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Patient</th>
            <th scope="col">Doctor</th>
            <th scope="col">Requested On</th>
            <th scope="col">Accepted On</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in AcceptedRequests)
        {
            <tr>
                <td>@b.Id</td>
                <td>@b.PatientName</td>
                <td>@b.DoctorName</td>
                <td>@b.RequestedAt</td>
                <td>@b.AcceptedAt</td>
                <button class="btn btn-primary" @onclick="@(() => DeleteMatch(b.Id))">Delete</button>
            </tr>
        }
    </tbody>
</table>
<br />

<h4>Rejected Requests</h4>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Patient</th>
            <th scope="col">Doctor</th>
            <th scope="col">Requested On</th>
            <th scope="col">Rejected On</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in RejectedRequests)
        {
            <tr>
                <td>@b.Id</td>
                <td>@b.PatientName</td>
                <td>@b.DoctorName</td>
                <td>@b.RequestedAt</td>
                <td>@b.RejectedAt</td>
                <button class="btn btn-primary" @onclick="@(() => DeleteMatch(b.Id))">Delete</button>
            </tr>
        }
    </tbody>
</table>

